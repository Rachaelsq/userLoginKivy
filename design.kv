#:kivy 1.0
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            #spacing is internal and padding is external
            padding: 15, 15
            spacing: 20,20
            Label:
                text:"User Login"
                font_size: '30sp'
                color:0.6, 0.4, 0.9
            TextInput:
                id: username
                hint_text:"Username"
            TextInput:
                id: password
                password: True
                hint_text:"Password"
            #relative layout helps with spacing the login button
            RelativeLayout:
                Button: 
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint:0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    background_color: 	0.6, 0.4, 0.9
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            Button:
                text: "Forgot Password"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign Up"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()
            
                
#==================
#SIGN UP SCREEN
#==================
<SignUpScreen>:
    GridLayout
        cols: 1
        padding: 20,20
        spacing: 20,20 
        Label:
            text: "Sign up !!"
        TextInput:
            id: username
            hint_text:"Username"
        TextInput:
            id: password
            hint_text:"Password"
        RelativeLayout:    
            Button:
                text: "Submit"
                size_hint:0.3, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)


#========================
#SIGN UP SCREEN SUCCESS
#========================
<SignUpScreenSuccess>:
    GridLayout
        cols: 1
        spacing: 20, 10
        padding: 20, 10
        Label:
            text: "Sign up successful"
        RelativeLayout:
            Button:
                text: "Login Page"
                background_color: 	0.6, 0.4, 0.9
                on_press: root.go_to_login()
                size_hint:0.2, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}


#================================
#LOG IN SCREEN SUCCESS/ MAIN PAGE
#================================
<LoginScreenSuccess>:
    GridLayout
        cols: 1
        spacing: 20, 10
        padding: 20, 10
        Label:
            text: "How do you feel?"
            font_size: '30sp'
            color:0.6, 0.4, 0.9
        TextInput:
            id: feeling
            hint_text:"Enter Happy, Sad, or Unloved."
        RelativeLayout:
            Button:
                text: "Click here for a quote"
                on_press: root.get_quote(root.ids.feeling.text)
                background_color: 	0.6, 0.4, 0.9
                size_hint:0.6, .4
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        ScrollView:
            Label:
                id: quote
                text: ""
                #none gives the text unlimited height
                text_size: self.width, None
                size_hint_y:None
                #texture size is a tuple and the params are width of the txt and 2nd is height
                height: self.texture_size[1]


        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'logout_hover.png' if self.hovered else "logout_nothover.png"
                size_hint:0.2, 0.3
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
                
#            Button:
#                text:"Logout"
#                on_press: root.log_out()
#                background_color: 	0.6, 0.4, 0.9
#               size_hint:0.2, 0.3
#               pos_hint: {'center_x': 0.5, 'center_y': 0.6}

#==================
# ROOT WIDGET
#==================
#the root widget keeps track of all the screens 
#of the app (they are children)

<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name:"sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"














